pkgname=shc
pkgver=3.8.9
pkgrel=1
pkgdesc="Converts shell script to C source code, and then compiles it. Do NOT use this to encrypt your scripts as it is not meant to be used for that."
arch=('i686' 'x86_64')
url="http://www.datsi.fi.upm.es/~frosal/sources/shc.html"
provides=('shc')
license=('GPL')

source=('http://www.datsi.fi.upm.es/~frosal/sources/shc-3.8.9.tgz')
md5sums=('df4d329ae11e1f57dbdbc097e8788bdc')

build() {
cd "${srcdir}"/"${pkgname}"-"${pkgver}"
#makefile assumes this symbolic link exists
ln -s shc-${pkgver}.c shc.c
make shc   
}

package() {
cd "${srcdir}"/"${pkgname}"-"${pkgver}"
install -D -m 755 shc "${pkgdir}"/usr/bin/shc
#install the man page
gzip shc.1
install -D -m 644 shc.1.gz "$pkgdir"/usr/share/man/man1/shc.1.gz
}


