# Maintainer: onefire <onefire.myself@gmail.com>
pkgname=rstudio-desktop-custom
pkgver=0.97.449
pkgrel=1
pkgdesc="An IDE for R"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.rstudio.org/"
depends=('r>=2.11.1' 'pango>=1.14.0' 'qtwebkit')
conflicts=('rstudio-desktop' 'rstudio-desktop-git')
provides=("rstudio-desktop=${pkgver}")
groups=('custom')

if [ "$CARCH" = "i686" ]; then
	_arch=i386
	sha512sums=('1296aef32792bdb80dd63ffda4e8f472e5c779226555bf44eb7384163ce81b9feb8d5e39b3f25b532c8644925fe434a90adbb9e9d3d7c4c8bb3d64b928125eb4')

elif [ "$CARCH" = "x86_64" ]; then
	_arch=amd64
	sha512sums=('bbc7432425e0adc7d21fa8c96e79eea884a438d59fb56823bd55e7886c2b4e1294e59c5e16f6b77b6cee9dcd587e3a1b7b63e99827b46fb990bfcd0be6496b6d')
fi

source=("http://download1.rstudio.org/rstudio-${pkgver}-${_arch}.deb")

package() {
  msg "Getting contents of .deb package..."
  cd "$srcdir"
  tar zxvf data.tar.gz -C "$pkgdir"
  
  install -dm755 "$pkgdir/usr/bin"
  cd "$pkgdir/usr/lib/rstudio/bin"
  cd "$pkgdir/usr/bin"
  ln -s -f ../lib/rstudio/bin/rstudio rstudio-bin
}
