# Maintainer: onefire <onefire.myself@gmail.com>
pkgname=rstudio-desktop-custom
pkgver=0.97.551
pkgrel=1
pkgdesc="An IDE for R"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.rstudio.org/"
depends=('r>=2.11.1' 'pango>=1.14.0' 'qtwebkit')
conflicts=('rstudio-desktop' 'rstudio-desktop-git')
provides=("rstudio-desktop=${pkgver}")
groups=('custom')

if [ "$CARCH" = "i686" ]; then
	_arch=i386
	sha512sums=('9c349eca65731457c37268dc6426c08999c5c7a6797cf1e03d2f40caa69f613dc4088533805549e0b20567342d32c2e2fe740ac63591b3919e30bc0c6eb33e04')

elif [ "$CARCH" = "x86_64" ]; then
	_arch=amd64
	sha512sums=('5cee11d4b8fbbe658bc33f94cc65a358a24a2d2b50e1a1ebdbe9695ee28b83c0b2dc3ff9f77672f5313e50ae1acb775d20d5f18aa07afbfeb265ed9adf497d27')
fi

source=("http://download1.rstudio.org/rstudio-${pkgver}-${_arch}.deb")

package() {
  msg "Getting contents of .deb package..."
  cd "$srcdir"
  tar zxvf data.tar.gz -C "$pkgdir"
  
  install -dm755 "$pkgdir/usr/bin"
  cd "$pkgdir/usr/lib/rstudio/bin"
  cd "$pkgdir/usr/bin"
  ln -s -f ../lib/rstudio/bin/rstudio rstudio-bin
}
