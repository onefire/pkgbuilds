# Maintainer: onefire <onefire.myself@gmail.com>
pkgname=libscl
pkgver=20120315
pkgrel=1
pkgdesc="A C++ statistical computing library built upon a C++ matrix class.  It's usage is similar in style to Matlab, Gauss, and R."
arch=('any')
url="http://public.econ.duke.edu/webfiles//arg/libscl"
depends=('atlas-lapack')
provides=('libscl')
license=('GPL')

source=('http://public.econ.duke.edu/webfiles//arg/libscl/libscl.tar'
        'libscl.txt'
        'COPYING')
md5sums=('c0dbf244ffcc9d081be10bebef796626'
         '7e10747d7b33d2de50459a50c155b1b7'
         'eb723b61539feef013de476e68b5c50a')

build() {
cd "${srcdir}"/"${pkgname}"/gpp
make
cd ../cblas
make
}

package() {
mkdir -p "${pkgdir}"/usr/include
mkdir -p "${pkgdir}"/usr/lib
install -Dm 644 libscl.txt "${pkgdir}"/usr/share/doc/libscl/libscl.txt
install -m 644 COPYING "${pkgdir}"/usr/share/doc/libscl/COPYING
cd "${srcdir}"/"${pkgname}"
install -m 644 copyrite "${pkgdir}"/usr/share/doc/libscl/COPYRIGHTS 
for i in frontend src gpp
do
 install -m 755 $i/*.h "${pkgdir}"/usr/include
done
install -m 755 frontend/*.bak "${pkgdir}"/usr/include
install -m 755 cblas/libsclcb.a "${pkgdir}"/usr/lib
install -m 755 gpp/libscl.a "${pkgdir}"/usr/lib
}


